@{   
    Layout = null;
}
@Styles.Render("~/bundles/Logincss")
    @Scripts.Render("~/bundles/LoginJs")
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

<script src="~/Scripts/ModelPopup.js"></script>
<link href="css/bootstrap.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="css/hill.css">
<style>

/* CSS Document */
body {
    font-size:100%; 
}
a:focus {
	outline:none;
}
#logo {
	margin-top: 24px;
	max-width: 274px;
	min-width: 250px;
	width: 100%;
}
.infoarea {
	margin-top: 24px;
	height:30px;	
	
	font-size:20px;
	color:#7d7d7d;
	
}
.infosection {
	margin:0px;
	padding:0px;
	padding-right:15px;
	height:34px;
	font-size:24px;
	color:#000;
	font-weight:bold;
	background-color:#ff9231;
	vertical-align: middle;
	display: table-cell;
	margin: 19px 0 0;
	text-align:right;
	width:100%;
}
.loginlink {
	margin:0px;
	padding:0px;
	height:66px;
	text-align:center;
	line-height:66px;
}
.loginlink a {
	margin:0px;
	padding:0px;
	font-size:24px;
	color:#6c91ef;
}
.carousel-caption {
	top:0;
}
.copyrightarea {
	width:100%;
	height:60px;
	text-align:center;
	font-size:16px;
	color:#000000;
	line-height:60px;
}
    </style>
<header>
<div class="container">
    <div class="row">
      <div class="col-sm-4 logoarea"> <img id="logo" src="Images/hil-logo.jpg"> </div>
      <div class="col-sm-8 infoarea">
        <div class="pull-right"> Dealer Information Management System (DIMS) </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="loginlink"> <a href="LogOn/LogOn" id="btnGoLogin">Click here to Login</a> </div>
          @*<a href="~/LogOn/LogOn" style="color: white; font-weight: bold; outline: none;" data-toggle='modal' id="btnGoLogin">Click Here To Login</a>*@
      </div>
    </div>
  </div>
    </header>
<div id="myCarousel" class="carousel slide container" data-interval="3000" data-ride="carousel"> 
  <!-- Carousel indicators -->
  
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for carousel items -->
  <div class="carousel-inner">
    <div class="active item " > <img  style="width:100%"  src="Images/3rd_slider.jpg" alt="First Slide">
      <div class="carousel-caption">
        <h3>First slide label</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
    </div>
    <div class="item"> <img style="width:100%"  src="Images/comprehensive-building-solutions.jpg" alt="Second Slide">
      <div class="carousel-caption">
        <h3>Second slide label</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
    </div>
    <div class="item"> <img style="width:100%" src="Images/comprehensive-building-solutions1.jpg" alt="Third Slide">
      <div class="carousel-caption">
        <h3>Third slide label</h3>
        <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="col-sm-12" style="background-color:#6c91ef;">
    <div class="copyrightarea"><label id="FooterLabel">Copyright &copy;&nbsp; @DateTime.Now.Year DIMS.All Rights Reserved.</label></div>
      
  </div>
</footer>
<!-- Include all compiled plugins (below), or include individual files as needed --> 
<script src="js/bootstrap.min.js"></script> 

<script type="text/javascript">
    
    $('#btnGoLogin').popupWindow({
        height: 500,
        width: 800,
        top: 50,
        left: 50
    });
</script>
