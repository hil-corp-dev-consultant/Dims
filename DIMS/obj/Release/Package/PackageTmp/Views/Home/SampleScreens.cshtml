@using LabelNames = DIMS.Content.Resource_Files.AddScheme;
@{
    Layout = null;
}


<section class="content-header" style="padding: 1px 15px 0;">
    <h2>CreateSchemes</h2>
    <ol class="breadcrumb">
        <li><a href ng-click="go('home')"><i class="fa fa-dashboard"></i>Home</a></li>
        <li>SFDC SCREENS</li>
        <li class="active">CreateSchemes</li>
    </ol>
    <nav style="padding: 1px 10px 1px 10px;">
        <div class="row">
            <div class="col-sm-11" id="IconsNavBar">
                <a href ng-click="go('SchemesList')">
                    <i class="fa fa-list fa-4" title="List"></i>
                </a>
                <a href ng-click="SaveSchemesData()">
                    <i class="fa fa-floppy-o fa-4" title="Save"></i>
                </a>
                <a href ng-click="go('Compensation')">
                    <i class="fa fa-file-o fa-4" title="Add New"></i>
                </a>
                <a>
                    <i class="fa fa-paperclip fa-4" title="Attachements"></i>
                </a>
                <a href ng-click="SendForApproval()">
                    <i class=" fa fa-thumbs-o-up" title="Send for Reviews"></i>
                </a>
                <a href ng-click="go('Compensation')">
                    <i class="fa fa-refresh fa-4" title="Refresh"></i>
                </a>
            </div>
        </div>
    </nav>
</section>

<section class="content" style="max-height: 478px; overflow-y: scroll;">
    <div class="col-md-12">
        <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
            <div class="box-header">
                <form role="form" class="form-horizontal">
                    <h5><b>Scheme Details</b></h5>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.SchemeName</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="SchemeName" data-ng-model="SchemeName" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.SchemeID</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="SchemeID" data-ng-model="SchemeID" readonly="readonly" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.SchemeDescription</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="SchemeDescription" data-ng-model="SchemeDescription" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Target</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="Target" data-ng-model="Target" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Eligibility</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="Eligibility" data-ng-model="Eligibility" />
                        </div>

                    </div>
                    <h5><b>Product and Area</b></h5>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">@LabelNames.Category</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="Category" type="text" readonly="readonly" data-ng-model="Category">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit" ng-click="Getdata('GetCategoryForProduct','SalesEmployeesForOrder','Employee List')"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                        <label class="col-sm-1 control-label">@LabelNames.Product</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="Product" type="text" readonly="readonly" data-ng-model="Product">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                        <label class="col-sm-1 control-label">@LabelNames.Product</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="Product32" type="text" readonly="readonly" data-ng-model="Product">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.StartDate</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="StartDate" readonly="readonly" data-ng-model="StartDate" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Enddate</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="EndDate" readonly="readonly" data-ng-model="EndDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Zone</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="Zone" type="text" readonly="readonly" data-ng-model="Zone">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.State</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="State" type="text" readonly="readonly" data-ng-model="State">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.TerritoryArea</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="TerritoryArea" type="text" readonly="readonly" data-ng-model="TerritoryArea">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Location</label>
                        <div class="col-sm-3">
                            <div class="input-group add-on">
                                <input class="form-control" name="srch-term" id="Location" type="text" readonly="readonly" data-ng-model="Location">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Status</label>
                        <div class="col-sm-3">
                            <select class="form-control" id="Status" data-ng-model="Location">
                                <option value="">Select Status</option>
                                <option value="Active">Active</option>
                                <option value="InActive">In Active</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        $("#StartDate").datepicker({
            "autoclose": true
        });
        $("#EndDate").datepicker({
            "autoclose": true
        });
    });


</script>
