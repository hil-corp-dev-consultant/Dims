<script type="text/javascript">

    $(window).resize(function () {
        $('.CustomHeight_Section').height($(window).height() - 170);
    });
    $('.CustomHeight_Section').height($(window).trigger('resize'));


    $(document).ready(function () {
        $('#SchemeName').SumoSelect({ placeholder: 'Scheme' });
        $('#Category').SumoSelect({ placeholder: 'Category' });
        $('#Product').SumoSelect({ placeholder: 'Product' });
        $('#Zone').SumoSelect({ placeholder: 'Zone' });
        $('#State').SumoSelect({ placeholder: 'State' });
        $('#Area').SumoSelect({ placeholder: 'TerritoryCode' });
        $('#Location').SumoSelect({ placeholder: 'Location' });

        $("#FromDate").datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
            //format: "mm-yyyy",
            //viewMode: "months",
            //minViewMode: "months",
            //autoclose: true
        });
        $("#ToDate").datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
        //$("#SchemesList").dataTable();
        //$("#SchemesList").dataTable({
        //    "scrollX": true
        //});

    });
</script>

