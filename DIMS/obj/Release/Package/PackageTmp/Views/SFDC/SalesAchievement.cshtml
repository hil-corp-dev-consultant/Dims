                        </thead>
                        <tbody>                            
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
<script type="text/javascript">
    $(window).resize(function () {
        $('.CustomHeight_Section').height($(window).height() - 170);
    });
    $('.CustomHeight_Section').height($(window).trigger('resize'));

    $(document).ready(function () {
        $("#FromDate").datepicker({
            format: 'dd-mm-yyyy',
            autoclose:true
        });
        $("#ToDate").datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true
        });
        $("#SalesAchievementView").dataTable({
            "scrollX": true
        });
    });
</script>

