                    <table id="SalesAchievementView" class="table tablecss" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color:#d2401a;color:white">
                                <th>Record Id</th>
                                <th>Date</th>
                                <th>Days in month</th>
                                <th>Sales Employee</th>
                                <th>Location</th>
