    Layout = null;
}
<title id="LogoTitle">HIL Limited</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
@Styles.Render("~/bundles/Logincss")
    @Scripts.Render("~/bundles/LoginJs")
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

<script src="~/Scripts/ModelPopup.js"></script>
<link href="css/bootstrap.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="css/hill.css">
<style>

/* CSS Document */
body {
    font-size:100%; 
}
a:focus {
	outline:none;
}
   
#logo {
	margin-top: 24px;
	max-width: 274px;
	min-width: 250px;
	width: 100%;
}
.infoarea {
	margin-top: 24px;
	height:30px;	
	
	font-size:20px;
	color:#7d7d7d;
	
}
.infosection {
	margin:0px;
	padding:0px;
	padding-right:15px;
	height:34px;
	font-size:24px;
	color:#000;
	font-weight:bold;
	background-color:#ff9231;
	vertical-align: middle;
	display: table-cell;
	margin: 19px 0 0;
	text-align:right;
	width:100%;
}
.loginlink {
	margin:0px;
	padding:0px;
	height:66px;
	text-align:center;
	line-height:66px;
}
.loginlink a {
	margin:0px;
	padding:0px;
	font-size:24px;
	color:#6c91ef;
}
.carousel-caption {
	top:0;
}
.copyrightarea {
	width:100%;
	height:60px;
	text-align:center;
	font-size:16px;
	color:#000000;
	line-height:60px;
}
    </style>

<header>

<div class="container" style="width:73%;font-family:Calibri,'Open Sans',sans-serif;" >
    <div class="row">
      <div class="col-sm-4 logoarea"> <img id="logo" src="Images/hil-logo.jpg"> </div>
      <div class="col-sm-8 infoarea">
        <div class="pull-right"> Dealer Information Management System (DIMS) </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="loginlink" style="color:#7d7d7d;"> <a href="LogOn/LogOn" id="btnGoLogin" onmouseover="this.style.color='red'" onmouseout="this.style.color='#7d7d7d'">Click here to Login</a> </div>
          @*<input type="button" id="btnTestSession" value="Test Session" />
          <input type="hidden" name="visit" id="visit" value="" />*@
          @*<a href="~/LogOn/LogOn" style="color: white; font-weight: bold; outline: none;" data-toggle='modal' id="btnGoLogin">Click Here To Login</a>*@
      </div>
    </div>
  </div>
    </header>
<div id="myCarousel" class="carousel slide container" data-interval="3000" data-ride="carousel" style="width:73%;"> 
  <!-- Carousel indicators -->
  
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for carousel items -->
  <div class="carousel-inner" style="height:75%;">
    <div class="active item " > <img  style="width:100%"  src="Images/3rd_slider.jpg" alt="COMMITTED TO GREEN...">
      <div class="carousel-caption">
        <h3><u>COMMITTED TO GREEN...</u></h3>
        <p>CII’s Green Building Council’s eco-friendly building was built using HIL’s Aerocon Blocks and Panels</p>
      </div>
    </div>
    <div class="item"> <img style="width:100%"  src="Images/comprehensive-building-solutions.jpg" alt="PAN-INDIA MANUFACTURING">
      <div class="carousel-caption">
        <h3><u>PAN-INDIA MANUFACTURING</u></h3>
        <p>HIL operates 12 state-of-the-art manufacturing facilities accessible from major cities across India.</p>
      </div>
    </div>
    <div class="item"> <img style="width:100%" src="Images/comprehensive-building-solutions1.jpg" alt="COMPREHENSIVE BUILDING SOLUTIONS">
      <div class="carousel-caption">
        <h3 style="color:black;"><u> COMPREHENSIVE BUILDING SOLUTIONS</u></h3>
        <p style="color:black;">Since 1946, HIL's building products have been used for residential, commercial and infrastructure projects.</p>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="col-sm-12" >
    <div class="copyrightarea"><label id="FooterLabel">Copyright &copy;&nbsp; @DateTime.Now.Year DIMS.All Rights Reserved.</label></div>
      
  </div>
</footer>
