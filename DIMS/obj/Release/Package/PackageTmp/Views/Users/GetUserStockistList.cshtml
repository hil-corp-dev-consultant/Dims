    //Create Users from the Stockists
    function MakeStockistsToUsers() {
        debugger
        try {
            var Iden = "";
            var StockistArray = new Array();            
            $("#StockistList tbody tr").each(function () {
                //Iden = ($(this).attr("id")).replace("STRow_", "STK_");

                //if ($("#" + Iden + "").is(":checked")) {
