                                DeSelectAllCreditDebitNotes();
                                HideLoader();
                            }
                        });
                    } else {
                        var guid = CreateGuid();
                        window.location.href = "../../Home/GetPDF?reportname=CreditNote_" + guid + "";
                        DeSelectAllCreditDebitNotes();
                        HideLoader();
                    }
                }
            },
            error: function (e) {
