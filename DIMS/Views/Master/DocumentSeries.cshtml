@using LabelName = DIMS.Content.Resource_Files.DocumentSeries;
@{
    Layout = null;
}
<section class="content-header" style="padding: 1px 15px 0;">
    <h2>Document Series</h2>
    <ol class="breadcrumb">
        <li><a href ng-click="go('home')"><i class="fa fa-dashboard"></i>Home</a></li>
        <li>Default Configuration</li>
        <li class="active">Document Series</li>
    </ol>
    <nav style="padding: 1px 10px 1px 10px;">
        <div class="row">
            <div class="col-sm-11" id="IconsNavBar">

                <a href ng-click="SaveFunction()" id="CompRegSave">
                    <i class="fa fa-floppy-o fa-4" title="Save"></i>
                </a>
                <a href ng-click="listFunction()">
                    <i class="fa fa-list fa-4" title="List"></i>
                </a>
                <a href ng-click="NEWFunction()">
                    <i class="fa fa-file-o fa-4" title="Add New"></i>
                </a>

            </div>
        </div>
    </nav>
</section>
<section class="content" style="max-height: 478px; overflow-y: scroll;">
    @*<button type="button" id="Add" class="btn btn-primary" ng-click="SaveFunction()" style="background-color: #3295D6">Save</button>
    <button type="button" id="List" class="btn btn-primary" ng-click="listFunction()" style="background-color: #3295D6">List</button>
    <button type="button" id="New" class="btn btn-primary" ng-click="NEWFunction()" style="background-color: #3295D6">New</button>*@


    @*<input type="button" value="Add" ng-click="SaveFunction()" style="background-color: #3295D6" />*@
    @*   <input type="button" value="List" ng-click="listFunction()" style="background-color: #3295D6" />
    <input type="button" value="New" ng-click="NEWFunction()" style="background-color: #3295D6" />*@
    <div class="row" id="Addview">
        <div class="col-md-12">
            <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
                <div class="box-header">
                    @*<h3 class="box-title">Complaint Registration</h3>*@
                </div>
                <div class="box-body pad">
                    <form class="form-horizontal" role="form" style="font-size: 12px; font-weight: normal" action="">
                        <input type="hidden" id="DocumentSeries_id" data-ng-model="DocumentSeries_id_Model" />
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-sm-6">
                                            <select class="form-control" id="ddlDocumentSeries" data-ng-model="ddlDocumentSeries_Model" ng-change="DropDownChange()">
                                            <option value="Select Document">Select Document</option>
                                            <option value="Compensation">Compensation</option>
                                            <option value="Complaint Registration">Complaint Registration</option>
                                            <option value="Corrective Measures">Corrective Measures</option>
                                            <option value="Investigation">Investigation</option>
                                        </select>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                        </div>
                        <div class="col-sm-12  tabdiv">
                            <div class="col-sm-12 CloseOpen" onclick="FormToggle('DocumentSeriesDetails')">
                                <img src="~/Images/en_next.png" />
                                <a class="Expand">Document Series</a>
                            </div>
                            <div class="row" style="padding-top: 30px; display: none;" id="DocumentSeriesDetails_Form">
                                <div class="col-sm-12">
                                    <table class="table innertable" id="DocumentSeriesDetails_Table">
                                        <thead>
                                            <tr style="background-color: #B2CCED">
                                                <th>@LabelName.DocumentSeriesSno</th>
                                                <th>@LabelName.DocumentSeriesCode</th>
                                                <th>@LabelName.FirstNum</th>
                                                <th>@LabelName.LastNum</th>
                                                <th>@LabelName.SeriesPrefix</th>
                                                <th>@LabelName.NextNum</th>
                                                <th>@LabelName.SeriesSuffix</th>
                                                <th>@LabelName.Lock</th>
                                                <th>@LabelName.FinancialPeriod</th>
                                                <th>@LabelName.Default</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                        <tfoot>
                                            <tr style="background-color: #B2CCED; display: none;">
                                                <th>@LabelName.DocumentSeriesSno</th>
                                                <th>@LabelName.DocumentSeriesCode</th>
                                                <th>@LabelName.FirstNum</th>
                                                <th>@LabelName.LastNum</th>
                                                <th>@LabelName.SeriesPrefix</th>
                                                <th>@LabelName.NextNum</th>
                                                <th>@LabelName.SeriesSuffix</th>
                                                <th>@LabelName.Lock</th>
                                                <th>@LabelName.FinancialPeriod</th>
                                                <th>@LabelName.Default</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <input type="button" value="Add" id="PlantProductDetails_Add" style="background-color: #3295D6" class="smallbutton" data-toggle="modal" data-target="#" ng-click="OpenDocumentSeriesDetails()" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="row" id="listview">
        <div class="col-md-12">
            <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
                <div class="table-responsive">
                    <table id="list" class="table" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color: rgb(50,149,214)">
                                <th>SNO.</th>
                                <th>ID</th>
                                <th>Document Series code</th>
                                <th>Document Series Name</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="DocumentSeriesDetailsModal" tabindex="-1" role="dialog" aria-labelledby="MSDModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="MSDModalLabel">Add/Update Document Series</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal ng-pristine ng-valid" role="form" method="get" action="#">
                    <div class="row">
                        <input type="hidden" id="DocumentSeriesDetailsId" data-ng-model="DocumentSeriesDetailsId_Model" />
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtModalDocumentSeriesCode" class="col-sm-5 control-label" style="text-align: right;">
                                    Document series Code<span class="Mandatory">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalDocumentSeriesCode" data-ng-model="txtModalDocumentSeriesCode_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalFirstNum" class="col-sm-5 control-label" style="text-align: right;">
                                    First Num<span class="Mandatory">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalFirstNum" data-ng-model="txtModalFirstNum_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalLastNum" class="col-sm-5 control-label" style="text-align: right;">
                                    Last Num<span class="Mandatory">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalLastNum" data-ng-model="txtModalLastNum_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalSeriesPrefix" class="col-sm-5 control-label" style="text-align: right;">
                                    Series Prefix
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalSeriesPrefix" data-ng-model="txtModalSeriesPrefix_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalNextNo" class="col-sm-5 control-label" style="text-align: right;">
                                    Next No
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalNextNo" data-ng-model="txtModalNextNo_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalSeriesSuffix" class="col-sm-5 control-label" style="text-align: right;">
                                    Series Suffix
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalSeriesSuffix" data-ng-model="txtModalSeriesSuffix_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="chkModalLock" class="col-sm-5 control-label" style="text-align: right;">
                                    Lock
                                </label>
                                <div class="col-sm-1">
                                    <input type="checkbox" class="form-control" id="chkModalLock" data-ng-model="chkModalLock_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalFinancialPeriod" class="col-sm-5 control-label" style="text-align: right;">
                                    Financial Period
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtModalFinancialPeriod" data-ng-model="txtModalFinancialPeriod_Model" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="chkModalDefaultSeries" class="col-sm-5 control-label" style="text-align: right;">
                                    Default Series
                                </label>
                                <div class="col-sm-1">
                                    <input type="checkbox" class="form-control" id="chkModalDefaultSeries" data-ng-model="chkModalDefaultSeries_Model" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="DocumentSeriesModal_Save" class="btn btn-primary" ng-click="SaveDocumentSeriesDetails()">Save</button>
                <button type="button" id="DocumentSeriesModal_Delete" class="btn btn-danger" ng-click="DeleteDocumentSeriesDetails()">Delete</button>
                <button type="button" id="DocumentSeriesModal_Close" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>