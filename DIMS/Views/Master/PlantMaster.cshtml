@using LabelName = DIMS.Content.Resource_Files.PlantMaster;
@{
    Layout = null;
}
<section class="content-header" style="padding: 1px 15px 0;">
    <h2>Plant Master</h2>
    <ol class="breadcrumb">
        <li><a href ng-click="go('home')"><i class="fa fa-dashboard"></i>Home</a></li>
        <li>Default Configuration</li>
        <li class="active">Plant Master</li>
    </ol>
    <nav style="padding: 1px 10px 1px 10px;">
        <div class="row">
            <div class="col-sm-11" id="IconsNavBar">

                <a href ng-click="SaveFunction()" id="CompRegSave">
                    <i class="fa fa-floppy-o fa-4" title="Save"></i>
                </a>
                <a href ng-click="listFunction()">
                    <i class="fa fa-list fa-4" title="List"></i>
                </a>
                <a href ng-click="NEWFunction()">
                    <i class="fa fa-file-o fa-4" title="Add New"></i>
                </a>

            </div>
        </div>
    </nav>
</section>
<section class="content" style="max-height: 478px; overflow-y: scroll;">
    @*<button type="button" id="Add" class="btn btn-primary" ng-click="SaveFunction()" style="background-color: #3295D6">Save</button>
    <button type="button" id="List" class="btn btn-primary" ng-click="listFunction()" style="background-color: #3295D6">List</button>
    <button type="button" id="New" class="btn btn-primary" ng-click="NEWFunction()" style="background-color: #3295D6">New</button>*@


    @*<input type="button" value="Add" ng-click="SaveFunction()" style="background-color: #3295D6" />*@
    @*   <input type="button" value="List" ng-click="listFunction()" style="background-color: #3295D6" />
    <input type="button" value="New" ng-click="NEWFunction()" style="background-color: #3295D6" />*@
    <div class="row" id="Addview">
        <div class="col-md-12">
            <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
                <div class="box-header">
                    @*<h3 class="box-title">Complaint Registration</h3>*@
                </div>
                <div class="box-body pad">
                    <form class="form-horizontal" role="form" style="font-size: 12px; font-weight: normal" action="">
                        <input type="hidden" id="Plant_id" data-ng-model="Plant_id_Model" />
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantCode">
                                            @LabelName.PlantCode<span style="color: #FF0000">*</span></label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantCode" ng-model="txtPlantCode_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantName">
                                            @LabelName.PlantName<span style="color: #FF0000">*</span>
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantName" ng-model="txtPlantName_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantCity">
                                            @LabelName.City
                                        </label>
                                        <div class="col-sm-6">
                <div class="input-group add-on">
                                        <input type="text" class="form-control" id="txtPlantCity" data-ng-model="txtPlantCity_Model" disabled="disabled" />
                                <div class="input-group-btn">
                                    <button class="btn btn-default" ng-click="GetFieldData('GetCity_MasterLookupData','City_MasterMaster','City_Master List')"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                    </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantState">
                                            @LabelName.State
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control gray" id="txtPlantState" ng-model="txtPlantState_Model" disabled="disabled" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantAreaName">
                                            @LabelName.AreaName
                                        </label>
                                        <div class="col-sm-6">
                <div class="input-group add-on">
                                        <input type="text" class="form-control" id="txtPlantAreaName" data-ng-model="txtPlantAreaName_Model" disabled="disabled" />
                                <div class="input-group-btn">
                                    <button class="btn btn-default" ng-click="GetFieldData('GetArea_MasterLookupData','Area_Master','Area_Master List')"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                    </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantCountry">
                                            @LabelName.Country
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control gray" id="txtPlantCountry" ng-model="txtPlantCountry_Model" disabled="disabled" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantAddress">
                                            @LabelName.Address
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantAddress" ng-model="txtPlantAddress_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantRoom">
                                            @LabelName.Room
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantRoom" ng-model="txtPlantRoom_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantBuilding">
                                            @LabelName.Building
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantBuilding" ng-model="txtPlantBuilding_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantStreet">
                                            @LabelName.Street
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantStreet" ng-model="txtPlantStreet_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantZip">
                                            @LabelName.Zip
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantZip" ng-model="txtPlantZip_Model" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantEmail">
                                            @LabelName.Email
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantEmail" ng-model="txtPlantEmail_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantWebsite">
                                            @LabelName.Website
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantWebsite" ng-model="txtPlantWebsite_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantPhone1">
                                            @LabelName.Phone1
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantPhone1" ng-model="txtPlantPhone1_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantPhone2">
                                            @LabelName.Phone2
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantPhone2" ng-model="txtPlantPhone2_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantMobileNumber">
                                            @LabelName.MobileNumber
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantMobileNumber" ng-model="txtPlantMobileNumber_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantFax">
                                            @LabelName.Fax
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="txtPlantFax" ng-model="txtPlantFax_Model" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantCreatedBy">
                                            @LabelName.CreatedBy
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control gray" id="txtPlantCreatedBy" ng-model="txtPlantCreatedBy_Model" disabled="disabled" value="ADMIN" ng-init="txtPlantCreatedBy_Model='ADMIN'" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="txtPlantCreatedDate">
                                            @LabelName.CreatedDate
                                        </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control gray" id="txtPlantCreatedDate" ng-model="txtPlantCreatedDate_Model" disabled="disabled" ng-init="txtPlantCreatedDate_Model='@System.DateTime.Now.ToString("dd/MM/yyyy")'"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="ddlPlantActive">
                                            @LabelName.Active
                                        </label>
                                        <div class="col-sm-6">
                                            <select class="form-control" id="ddlPlantActive" ng-model="ddlPlantActive_Model">
                                                <option value="---Please select---">---Please select---</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12  tabdiv">
                            <div class="col-sm-12 CloseOpen" onclick="FormToggle('PlantMasterProductTypeDetails')">
                                <img src="~/Images/en_next.png" />
                                <a class="Expand">Product Type Details</a>
                            </div>
                            <div class="row" style="padding-top: 30px; display: none;" id="PlantMasterProductTypeDetails_Form">
                                <div class="col-sm-12">
                                    <table class="table innertable" id="PlantProductDetails_Table">
                                        <thead>
                                            <tr style="background-color: #B2CCED">
                                                <th>@LabelName.ProductTypeSno</th>
                                                <th>@LabelName.ProductTypeCode</th>
                                                <th>@LabelName.ProductTypeName</th>
                                                <th>@LabelName.ProductCategoryCode</th>
                                                <th>@LabelName.ProductCategoryName</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                        <tfoot>
                                            <tr style="background-color: #B2CCED; display: none;">
                                                <th>@LabelName.ProductTypeSno</th>
                                                <th>@LabelName.ProductTypeCode</th>
                                                <th>@LabelName.ProductTypeName</th>
                                                <th>@LabelName.ProductCategoryCode</th>
                                                <th>@LabelName.ProductCategoryName</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <input type="button" value="Add" id="PlantProductDetails_Add" style="background-color: #3295D6" class="smallbutton" data-toggle="modal" data-target="#" ng-click="OpenPlantProductDetails()" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="row" id="listview">
        <div class="col-md-12">
            <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
                <div class="table-responsive">
                    <table id="list" class="table" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color: rgb(50,149,214)">
                                <th>SNO.</th>
                                <th>ID</th>
                                <th>Plant code</th>
                                <th>Area Name</th>
                                <th>State Name</th>
                                <th>Country Name</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="PlantProductDetailsModal" tabindex="-1" role="dialog" aria-labelledby="MSDModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="MSDModalLabel">Add/Update Product Type/Category Lines</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal ng-pristine ng-valid" role="form" method="get" action="#">
                    <div class="row">
                        <input type="hidden" id="PlantProductDetailsId" data-ng-model="PlantProductDetailsId_Model" />
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtModalProductTypeCode" class="col-sm-5 control-label" style="text-align: right;">
                                    Product Type Code<span class="Mandatory">*</span></label>
                                <div class="col-sm-6">
                <div class="input-group add-on">
                                        <input type="text" class="form-control" id="txtModalProductTypeCode" data-ng-model="txtModalProductTypeCode_Model" disabled="disabled" />
                                <div class="input-group-btn">
                                    <button class="btn btn-default" ng-click="GetFieldData('GetProduct_TypeLookupData','Product_TypeMaster','Product_Type List')"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                    </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalProductTypeName" class="col-sm-5 control-label" style="text-align: right;">
                                    Product Type Name
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control gray" id="txtModalProductTypeName" data-ng-model="txtModalProductTypeName_Model" disabled="disabled" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalProductCategoryCode" class="col-sm-5 control-label" style="text-align: right;">
                                    Product Category Code<span class="Mandatory">*</span></label>
                                <div class="col-sm-6">
                <div class="input-group add-on">
                                        <input type="text" class="form-control" id="txtModalProductCategoryCode" data-ng-model="txtModalProductCategoryCode_Model" disabled="disabled" />
                                <div class="input-group-btn">
                                    <button class="btn btn-default" ng-click="GetFieldData('GetProduct_CategoryLookupData','Product_CategoryMaster','Product_Category List')"><i class="glyphicon glyphicon-new-window"></i></button>
                                </div>
                            </div>
                    </div>
                            </div>
                            <div class="form-group">
                                <label for="txtModalProductCategoryName" class="col-sm-5 control-label" style="text-align: right;">
                                    Product Category Name
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control gray" id="txtModalProductCategoryName" data-ng-model="txtModalProductCategoryName_Model" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="PlantProductTypeModal_Save" class="btn btn-primary" ng-click="SavePlantProductDetails()">Save</button>
                <button type="button" id="PlantProductTypeModal_Delete" class="btn btn-danger" ng-click="DeletePlantProductDetails()">Delete</button>
                <button type="button" id="PlantProductTypeModal_Close" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
