    function ValidateCPOTP() {
    //debugger

        var CPUserCode = $("#CPUserCode").val();

        if (CPUserCode == "KAM") {
            $("#ChangePasswordDiv").show();
            $("#ChangePasswordOTPDiv").hide();
        }
        else {
            if ($("#otphidetext").val() == $("#txtOTP").val()) {
