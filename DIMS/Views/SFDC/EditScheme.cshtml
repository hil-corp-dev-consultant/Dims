<div  class="CustomHeight_Section" style="overflow: auto;">
<section style="padding:0 15px 90px;">
    <div class="row">
    <div class="col-md-12">
        <div class="box box-primary" style="background: white none repeat scroll 0 0; padding: 4px;">
            <div class="box-body">
                <form role="form" class="form-horizontal">
                    <h5><b>Scheme Details</b></h5>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.SchemeName</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.SchemeID</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.SchemeDescription</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Target</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Eligibility</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="" />
                        </div>

                    </div>
                    <h5><b>Product and Area</b></h5>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Category</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select Category</option>
                                <option value=""></option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Product</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select Product</option>
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.StartDate</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="EditStartDate" />
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Enddate</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="EditEndDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Zone</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select Zone</option>
                                <option value=""></option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.State</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select State</option>
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.TerritoryArea</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select area</option>
                                <option value=""></option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label">@LabelNames.Location</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select Location</option>
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@LabelNames.Status</label>
                        <div class="col-sm-3">
                            <select class="form-control">
                                <option value="">Select Status</option>
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <div class="col-sm-offset-6">
