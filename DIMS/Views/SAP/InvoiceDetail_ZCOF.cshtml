            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false
            //'scrollX': true
        });

        $("#tbl_Inv_Details1").dataTable({
            "bDestroy": true,
            "bSort": false,
            "bScrollCollapse": true,
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
            "footerCallback": function (tfoot, data, start, end, display) {
                var api = this.api();
                $(api.column(6).footer()).html(
                    api.column(6).data().reduce(function (a, b) {
                        var res = a + b;
                        return parseFloat(res).toFixed(2);
                    }, 0)
                );
            }
            //'scrollX': true
        });
    });
</script>
